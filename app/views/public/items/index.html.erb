<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'list', item: @item %>
    </div>
    <div class="item col-8">
       <div class="row">
        <h3>商品一覧</h3>
       </div>
       <div class="row">
        <% @items.each do |item| %>
        <div class="col-3 my-3">
          <%= link_to item_path(item), class: "item-link" do %>
           <% if item.image.attached? %>
            <%= image_tag item.image, size: "50x50" %>
          <% else %>
           <%= image_tag 'no_image', size: "50x50" %>
          <% end %>
          <% end %><br>
          <%= item.name %><br>
          ¥<%= item.price %><br>
         </div>
         <% end %>
       </div>
         <div class="row">
       <div class="clo-12">
        <%= paginate @items %>
       </div>
  </div>
    </div>
  </div>
</div>