<div class="container">
  <div class="row">
    <div class="h4 p-1 m-3 bg-light text-bark">配送先編集</div>
  </div>
  <%= form_with model: @shopping_address do |f| %>
  <div class="row">
    <div class="col-3 m-1">郵便番号（ハイフンなし）</div>
    <div class="col-2 m-1"><%= f.text_field :postal_code, class: "form-control" %></div>
  </div>
  <div class="row">
    <div class="col-3 m-1">住所</div>
    <div class="col-5 m-1"><%= f.text_field :address, class: "form-control" %></div>
  </div>
  <div class="row">
    <div class="col-3 m-1">宛名</div>
    <div class="col-2 m-1"><%= f.text_field :name, class: "form-control" %></div>
    <div class="col-3 m-1"></div>
    <div class="col-3"><%= f.submit '変更内容を保存', class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>