<div class="container">
　<div class="row">
    <div class="col">配送先登録/一覧</div>
  </div>
  <%= form_with model: @shopping_address, url: shopping_addresses_path do |f| %>
  <div class="row">
    <div class="field col-4">郵便番号</div>
    <div class="col-1"></div>
    <div class="field col-4"><%= f.text_field :postal_code, class: "form-control" %></div>
  </div>
  <div class="row">
    <div class="field col-4">住所</div>
    <div class="col-1"></div>
    <div class="field col-4"><%= f.text_field :address, class: "form-control" %></div>
  </div>
  <div class="row">
    <div class="field col-4">宛名</div>
    <div class="col-1"></div>
    <div class="field col-4"><%= f.text_field :name, class: "form-control" %></div>
    <div class="col-3"><%= f.submit '新規登録', class: "btn btn-success" %></div>
  </div>
  <% end %>
  <div class="row">
    <table class="table table-bordere">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @shopping_addresses.each do |shopping_address| %>
        <tr>
          <td><%= shopping_address.postal_code %></td>
          <td><%= shopping_address.address %></td>
          <td><%= shopping_address.name %></td>
          <td><%= link_to "編集する", edit_shopping_address_path(shopping_address), class: "btn btn-success" %>
              <%= link_to "削除する", shopping_address_path(shopping_address), method: :delete, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>