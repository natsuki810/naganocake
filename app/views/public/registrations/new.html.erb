<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="container">
 <div class="row">
  <div class="h4 p-1 m-3 bg-light text-bark">
   新規会員登録
  </div>
 </div>
 <div class="row">
  <div class="col-3 m-1">名前</div>
  <div class="col-1 m-1"><%= f.label "(姓)" %></div>
  <div class="col-3 m-1">
     <%= f.text_field :last_name,class: "form-control" %>
  </div>
  <div class="col-1 m-1"><%= f.label "(名)" %></div>
  <div class="col-3 m-1">
     <%= f.text_field :first_name,class: "form-control" %>
  </div>
 </div>
 <div class="row">
  <div class="col-3 m-1">フリガナ</div>
   <div class="col-1 m-1"><%= f.label :"(セイ)" %></div>
   <div class="col-3 m-1">
    <%= f.text_field :last_name_kana, class: "form-control" %>
   </div>
  <div class="col-1 m-1"><%= f.label :"(メイ)" %></div>
   <div class="col-3 m-1">
    <%= f.text_field :first_name_kana, class: "form-control" %>
   </div>
  </div>
 <div class="row">
  <div class="col-3 m-1">
   <%= f.label :"メールアドレス" %>
  </div>
   <div class="col-1 m-1"></div>
   <div class="col-3 m-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
   </div>
  </div>

 <div class="row">
  <div class="col-3 m-1">
       <%= f.label "郵便番号(ハイフンなし)" %>
  </div>
  <div class="col-1 m-1"></div>
   <div class="col-3 m-1">
    <%= f.text_field :postal_code, class: "form-control" %>
   </div>
 </div>

 <div class="row">
  <div class="col-3 m-1">
   <%= f.label :"住所" %>
  </div>
   <div class="col-1 m-1"></div>
   <div class="col-7 m-1">
    <%= f.text_field :address, class: "form-control" %>
   </div>
 </div>

 <div class="row">
  <div class="col-3 m-1">
   <%= f.label :"電話番号(ハイフンなし)" %>
  </div>
   <div class="col-1 m-1"></div>
   <div class="col-3 m-1">
    <%= f.text_field :telephone_number, class: "form-control" %>
   </div>
 </div>

 <div class="row">
  <div class="col-3 m-1">
    <%= f.label :"パスワード(6文字以上)" %>
    <%if @minimum_password_length %>

    <% end %>
  </div>
  <div class="col-1 m-1"></div>
   <div class="col-3 m-1">
    <%= f.password_field :password, autocomplete: "new-password" %>
   </div>
 </div>

 <div class="row">
  <div class="col-3 m-1">
   <%= f.label :"パスワード(確認用)" %>
  </div>
   <div class="col-1 m-1"></div>
   <div class="col-3 m-1">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
 </div>

 <div class="row">
  <div class="col-3 m-1"></div>
  <div class="col-1 m-1"></div>
  <div class="col-3 m-1">
    <div class="actions">
     <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
     <% end %>
   </div>
 </div>
 <div class="row">
    <div class="h4 p-1 m-1 bg-light text-bark">
     既に登録済の方
    </div>
 </div>
     <div class="row">
       <div class="col-4 m-1"></div>
       <div class="col-8 m-1">
        <%= render "public/shared/links" %>
       </div>
    </div>
</div>