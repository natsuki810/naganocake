<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <h4>会員の方はこちら</h4>
 <div class="row">
  <div class="field col-4"> <%= f.label :"メールアドレス" %></div>
  <div class="col-1"></div>
  <div class="field col-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
  </div>
 </div>
 
 <div class="row">
  <div class="field col-4"><%= f.label :"パスワード"%></div>
  <div class="col-1"></div>
  <div class="field col-4">
    <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
  </div>
 </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
 
 <div class="row">
  <div class="col-4"></div>
  <div class="col-1"></div>
  <div class="field col-4">
   <div class="actions">
     <%= f.submit "ログイン", class: "btn btn-success" %>
   </div>
    <% end %>
 </div>
</div>
<h4>会員登録がお済みでない方</h4>
<%= render "public/shared/links" %>
