<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row">
    <div class="h2 p-1 m-3 bg-light text-bark">
     ログイン
    </div>
  </div>
  <div class="row">
    <div class="h4 p-1 m-3 bg-light text-bark">会員の方はこちらからログイン</div>
  </div>
  <div class="row">
    <div class="col-4 m-1"> <%= f.label :"メールアドレス" %></div>
    <div class="col-1 m-1"></div>
    <div class="col-4 m-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
    </div>
   </div>
   <div class="row">
    <div class="col-4 m-1"><%= f.label :"パスワード"%></div>
    <div class="col-1 m-1"></div>
    <div class="col-4 m-1">
      <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
    </div>
   </div>
    <% if devise_mapping.rememberable? %>
    <div class="col-4 m-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
   <div class="row">
    <div class="col-4 m-1"></div>
    <div class="col-1 m-1"></div>
    <div class="col-4 m-1">
     <div class="actions">
       <%= f.submit "ログイン", class: "btn btn-success" %>
     </div>
      <% end %>
    </div>
   </div>
   <div class="row">
      <div class="h4 p-1 m-3 bg-light text-bark">
       会員登録がお済みでない方
      </div>
   </div>
   <div class="row">
    <div class="col-1 m-1"></div>
    <div class="col-8 m-1">
     <%= render "public/shared/links" %>
    </div>
   </div>
</div>