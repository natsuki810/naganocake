<div class="container">
  <div class="row">
    <div class="col">注文履歴詳細</div>
  </div>
  <div class="row">
    <div class="col-3">購入者</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.customer.full_name %></div>
  </div>
  <div class="row">
    <div class="col-3">注文日</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.created_at.strftime('%Y/%m/%d') %></div>
  </div>
  <div class="row">
    <div class="col-3">配送先</div>
    <div class="col-1"></div>
    <div class="col-4">〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></div>
  </div>
  <div class="row">
    <div class="col-3">支払い方法</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.payment_method_i18n %></div>
  </div>
  <div class="row">
    <div class="col-3">注文ステータス</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.status %></div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>
    <% @order.order_details.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.item.name %></td>
        <td><%= order.tax_included_price %></td>
        <td><%= order.quantity %></td>
        <td><%= order.tax_included_price*order.quantity %></td>
        <td><%= order.production_status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>