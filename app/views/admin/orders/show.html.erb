<div class="container">
  <div class="row">
    <div class="col">注文履歴詳細</div>
  </div>
  <div class="row">
    <div class="col-3">購入者</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.customer.full_name %></div>
  </div>
  <div class="row">
    <div class="col-3">注文日</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.created_at.strftime('%Y/%m/%d') %></div>
  </div>
  <div class="row">
    <div class="col-3">配送先</div>
    <div class="col-1"></div>
    <div class="col-4">〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></div>
  </div>
  <div class="row">
    <div class="col-3">支払い方法</div>
    <div class="col-1"></div>
    <div class="col-4"><%= @order.payment_method_i18n %></div>
  </div>
  <%= form_with model: @order, url: admin_order_path do |f| %>
  <div class="row">
    <div class="col-3">注文ステータス</div>
    <div class="col-1"></div>
    <div class="col-4">
      <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
      <%= f.submit '更新', class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.tax_included_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.tax_included_price*order_detail.quantity %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id) do |f| %>
              <%= f.select :production_status, OrderDetail.production_statuses.keys.map {|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]} %>
              <%= f.submit '更新', class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
     <table class="table table-borderless">
      <thead></thead>
      <tbody>
        <tr>
          <td>商品合計</td>
          <td><%= @order.total_payment - @order.postage %></td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td>請求額合計</td>
          <td><%= @order.total_payment %></td>
        </tr>
      </tbody>
     </table>
    </div>
  </div>
</div>