<div class="container">
  <div class="row">
    <div class="col"><%= @customer.full_name %>さんの注文一覧</div>
  </div>
   <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
        <td><%= order.customer.full_name %></td>
        <% @total_quantity=0 %>
        <td>
          <% order.order_details.each do |order_detail| %>
          <% @total_quantity += order_detail.quantity %>
          <% end %>
          <%= @total_quantity %>
        </td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="clo-12">
      <%= paginate @orders %>
    </div>
  </div>
</div>