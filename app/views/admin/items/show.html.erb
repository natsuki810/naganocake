<div class="container">
  <div class="row">
    <div class="titel col-4">商品詳細</div>
  </div>
  <div class="row">
    <div class="item col-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-1"></div>
    <div class="item col-5">
      <table class="item table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br />（税抜価格）</th>
          <td><%= @item.price.to_s(:delimited) %>
              (<%= @item.add_tax_price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active %>
             販売中
            <% else %>
             販売停止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>