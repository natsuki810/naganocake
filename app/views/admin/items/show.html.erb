<div class="container">
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">商品詳細</div>
  </div>
  <div class="row">
    <div class="col-3 m-1">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class="item col-5">
      <table class="table table-borderless">
        <tr>
          <td scope="col">商品名</td>
          <td scope="col"><%= @item.name %></td>
        </tr>
        <tr>
          <td scope="col">商品説明</td>
          <td scope="col"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td scope="col">ジャンル</td>
          <td scope="col"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td scope="col">税込価格<br />（税抜価格）</td>
          <td scope="col"><%= @item.price.to_s(:delimited) %>
              (<%= @item.add_tax_price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td scope="col">販売ステータス</td>
          <td scope="col">
            <% if @item.is_active %>
            <span class="font-weight-bold text-success">販売中</span>
            <% else %>
            <span class="font-weight-bold text-secondary">販売停止中</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td scope="col"></td>
          <td scope="col">
            <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>