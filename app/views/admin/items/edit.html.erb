<%= form_with model: @item, url: admin_item_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">商品編集</div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1">商品画像</div>
    <div class="col-4 my-1"><%= f.file_field :image, accept: "image/*" %></div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1">商品名</div>
    <div class="col-4 my-1"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1">商品説明</div>
    <div class="col-4 my-1"><%= f.text_area :introduction, class: "form-control" %></div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1">ジャンル</div>
    <div class="col-4 my-1">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1">税抜価格</div>
    <div class="col-4 my-1"><%= f.text_field :price, class: "form-control" %></div>円
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1">販売ステータス</div>
    <div class="col-4 my-1">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "販売停止中" %>
     </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1"></div>
    <div class="col-3 my-1">
        <%= f.submit '保存を変更' , class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>