<%= form_with model: @item, url: admin_items_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">商品新規登録</div>
  </div>
  
  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1">商品画像</div>
    <div class="col-5 my-1">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1">商品名</div>
    <div class="col-5 my-1">
      <%= f.text_field :name, placeholder: "商品名", class: "form-control"%>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1">商品説明</div>
    <div class="col-5 my-1"><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %></div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1">ジャンル</div>
    <div class="col-5 my-1">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '選択してください'}, { class: 'form-control' , required: true }%>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1">税抜価格</div>
    <div class="col-5 my-1"><%= f.text_field :price, placeholder: "1000", class: "form-control" %></div>円
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1">販売ステータス</div>
    <div class="col-5 my-1">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "販売停止中" %>
     </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-3 my-1"></div>
    <div class="col-5 my-1">
      <%= f.submit '新規登録' , class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>