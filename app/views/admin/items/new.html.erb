<%= form_with model: @item, url: admin_items_path do |f| %>
<div class="container">
  <div class="row">
    <div class="bg-secondary info col-4">商品新規登録</div>
  </div>

  <div class="row">
    <div class="item col-3">商品名</div>
    <div class="col-1"></div>
    <div class="item col-3"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="item col-3">商品説明</div>
    <div class="col-1"></div>
    <div class="item col-3"><%= f.text_area :introduction, class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="item col-3">ジャンル</div>
    <div class="col-1"></div>
    <div class="item col-3">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
  </div>

  <div class="row">
    <div class="item col-3">税抜価格</div>
    <div class="col-1"></div>
    <div class="item col-3"><%= f.text_field :price, class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="item col-3">販売ステータス</div>
    <div class="col-1"></div>
    <div class="item col-3">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "販売停止中" %>
     </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <div class="d-flex align-items-center justify-content-center">
        <%= f.submit '新規登録' , class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
</div>