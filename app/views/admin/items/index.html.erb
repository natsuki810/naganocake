<div class="container">
  <div class="row">
    <div class="bg-secondary info col-4">商品一覧</div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
        <% if item.is_active %>
        販売中
        <% else %>
        販売停止中
        <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>