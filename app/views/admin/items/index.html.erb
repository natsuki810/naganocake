<div class="container">
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">商品一覧</div>
    <div class="d-flex align-items-center justify-content-end col-8">
      <div class="col-1">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-plus"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tr class="table-active">
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td scope="col"><%= item.id %></td>
        <td scope="col"><%= link_to item.name, admin_item_path(item.id) %></td>
        <td scope="col"><%= item.price.to_s(:delimited) %></td>
        <td scope="col"><%= item.genre.name %></td>
        <td scope="col">
        <% if item.is_active %>
         <span class="font-weight-bold text-success">販売中</span>
        <% else %>
        <span class="font-weight-bold text-secondary">販売停止中</span>
        <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <div class="clo-3 m-1">
      <%= paginate @items %>
    </div>
  </div>
</div>