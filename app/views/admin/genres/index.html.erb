<div class="container">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">ジャンル一覧・追加</div>
  </div>
  <div class="row">
    <div class="col-3 m-1">ジャンル名</div>
    <div class="col-3 m-1"><%= f.text_field :name, class: "form-control"%></div>
    <div class="col-3 m-1"><%= f.submit '新規登録', class: "btn btn-success" %></div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-5 m-1">
      <table class="table mt-5">
       <tr class="table-active">
         <th scope="col-3">ジャンル</th>
         <th scope="col-2"></th>
       </tr>
       <% @genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
         </td>
       </tr>
       <% end %>
      </table>
    </div>
  </div>
</div>

