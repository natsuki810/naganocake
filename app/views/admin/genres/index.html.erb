<h2>ジャンル一覧</h2>
<div class="container">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row">
    <div class="col-4 bg-primary">ジャンル一覧・追加</div>
  </div>
  <div class="row">
    <div class="col-3">ジャンル名</div>
    <div class="col-1"></div>
    <div class="col-3"><%= f.text_field :name, class: "form-control"%></div>
    <div class="col-3"><%= f.submit '新規登録', class: "btn btn-success" %></div>
  </div>
  <% end %>
  <div class="row">
   <table class="table table-bordered">
    <tr>
      <th>ジャンル</th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
    </tr>
    <% end %>
   </table>
  </div>
</div>

