<%= form_with model: @genre, url: admin_genre_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">ジャンル編集</div>
  </div>
  <div class="row">
    <div class="col-3 m-1">ジャンル名</div>
    <div class="col-3 m-1">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-3 m-1">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>