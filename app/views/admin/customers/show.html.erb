<div class="container">
  <div class="row">
    <div class="h4 p-2 m-3 bg-light text-bark">
     <%= @customer.full_name %>さんの会員詳細
    </div>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="col">会員ID</th>
          <td scope="col"><%= @customer.id %></td>
        </tr>
        <tr>
          <th scope="col">氏名</th>
          <td scope="col"><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th scope="col">フリガナ</th>
          <td scope="col"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="col">郵便番号</th>
          <td scope="col"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="col">住所</th>
          <td scope="col"><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="col">電話番号</th>
          <td scope="col"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th scope="col">メールアドレス</th>
          <td scope="col"><%= @customer.email %></td>
        </tr>
        <tr>
          <th scope="col">会員ステータス</th>
          <td scope="col">
              <% if @customer.is_active %>
              <span class="text-success">有効</span>
              <% else %>
              <span class="text-secondary">無効</span>
              <% end %>
          </td>
        </tr>
        <tr>
          <th scope="col"></th>
          <td scope="col"><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></td>
          <td scope="col"><%= link_to "注文履歴一覧をみる", admin_path(@customer.id), class: "btn btn-primary" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
