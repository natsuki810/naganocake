<div class="container">
  <div class="row">
    <div class="titel col-4">
     <%= @customer.full_name %>さんの会員詳細
    </div>
  </div>
  <table class="table table-bordered">
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %><%= @customer.first_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
       <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th>
       <% if @customer.is_active %>
        <span class="text-success">有効</span>
       <% else %>
        <span class="text-secondary">無効</span>
       <% end %>
      </th>
    </tr>
  </table>
</div>
